{
  "name": "barefoot-nomad-be",
  "version": "1.0.0",
  "description": "Barefoot Nomad Backend Service",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon src/app.js",
    "migrate": "sequelize db:migrate",
    "undoMigration": "sequelize db:migrate:undo",
    "createMigration": "sequelize migration:generate --name $npm_config_name",
    "start": "node src/app.js",
    "test": "nyc --all mocha --timeout 10000 --exit --require babel-register test/unit/user/controller/",
    "coverage": "nyc --reporter=lcov --report-dir=./coverage yarn test",
    "lint:fix": "eslint --fix ./src/**",
    "lint": "eslint ./src/**"
  },
  "author": "Team 3 Barefoot",
  "license": "ISC",
  "eslintIgnore": [
    "hello.js",
    "world.js"
  ],
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cloudinary": "^1.35.0",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "cors": "^2.8.5",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "i18n": "^0.15.1",
    "http-assert": "^1.5.0",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "passport": "^0.6.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.30.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "validatorjs": "^3.22.1"
  },
  "devDependencies": {
    "babel-register": "^6.26.0",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "eslint": "^8.0.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "lcov-parse": "^1.0.0",
    "mocha": "^10.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0"
  }
